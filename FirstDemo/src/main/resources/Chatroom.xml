<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- Enable Annotation based configuration -->
	<context:annotation-config />

	<bean id="user1" class="com.spring.FirstDemo.User">
	    <property name="userName" value="Priyanka" />
	    <property name="password" value="123" />
	</bean>
	
	<bean id="user2" class="com.spring.FirstDemo.User">
	    <property name="userName" value="Shruti" />
	    <property name="password" value="123" />
	</bean>
	
	<bean id="user3" class="com.spring.FirstDemo.User">
	    <property name="userName" value="Sonal" />
	    <property name="password" value="123" />
	</bean>
	
	<bean id="user4" class="com.spring.FirstDemo.User">
	    <property name="userName" value="Sneha" />
	    <property name="password" value="123" />
	</bean>
	<bean id="chatroom1" class="com.spring.FirstDemo.Chatroom">  
	    <property name="name" value="Music"> </property>
	    <property name="users">    
	        <list>       
	         	<ref bean ="user1"></ref>
	         	<ref bean ="user2"></ref>
	        </list>
	    </property>
	     <property name="messages">    
	        <list>       
	         	<value>Hi</value>
	         	<value>Hello</value>
	         	<value>World</value>
	        </list>
	    </property>
	</bean>
	
	<bean id="chatroom2" class="com.spring.FirstDemo.Chatroom">  
	    <property name="name" value="Food"> </property>
	    <property name="users">    
	        <list>       
	         	<ref bean ="user3"></ref>
	         	<ref bean ="user4"></ref>
	        </list>
	    </property>
	     <property name="messages">    
	        <list>       
	         	<value>Hi Food</value>
	         	<value>Hello Food</value>
	         	<value>World Food</value>
	        </list>
	    </property>
	</bean>
</beans>



