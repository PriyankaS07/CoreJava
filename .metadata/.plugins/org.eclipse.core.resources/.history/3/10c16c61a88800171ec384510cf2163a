<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- Enable Annotation based configuration -->
	<context:annotation-config />

	<bean id="item" class="com.spring.FirstDemo.Item">
	    <property name="name" value="Chair" />
	    <property name="price" value="120" />
	</bean>
 	
	<bean id="order" class="com.spring.FirstDemo.Order">
	    <property name="orderNo" value="101" />
	    <property name="item" ref="item" />
	</bean>

</beans>



